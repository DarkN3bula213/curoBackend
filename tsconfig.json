{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES2019",
    "noImplicitAny": true,

    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types", "src/types"],
     "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@lib/*": ["src/lib/*"]
    },

    "skipLibCheck": true
  },
 
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/_*"],

  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": ["tsconfig-paths/register"]
  }
}

